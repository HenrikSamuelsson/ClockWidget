<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="0dp"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:text="@string/unknown_hour"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:typeface="monospace"/>

    <TextView
        android:id="@+id/colon"
        android:typeface = "monospace"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="-4dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="-3dp"
        android:layout_toRightOf="@+id/hour"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:text=":"
        android:textColor="@android:color/white"
        android:textSize="36sp"/>

    <TextView
        android:id="@+id/minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/colon"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:text="@string/unknown_minute"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:typeface="monospace"/>

    <TextView
        android:id="@+id/ampm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/minute"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/minute"
        android:includeFontPadding="false"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="12sp"></TextView>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hour"
        android:layout_marginTop="-10dp"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/starting_clock"
        android:textColor="@android:color/white"
        android:textSize="12sp"></TextView>

    <TextView
        android:id="@+id/week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginTop="-3dp"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/wait_a_moment"
        android:textColor="@android:color/white"
        android:textSize="12sp"></TextView>

</RelativeLayout>
